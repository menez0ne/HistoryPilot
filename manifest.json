{
  "manifest_version": 3,
  "name": "HistoryPilot",
  "version": "1.0",
  "description": "HistoryPilot lets you instantly verify any historical fact you come across using AI analysis. It's a great tool for students, researchers, or enthusiasts..",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "notifications",
    "scripting",
    "tabs"
  ],

 "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: chrome-extension:;"
  },

  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
   
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HistoryPilot - Analisi Storica",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["history.html", "history.css", "history.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}